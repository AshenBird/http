{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames":true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitThis": true,
    "baseUrl": ".",
    "noEmitOnError": true,
    "types": [ ],
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "declaration": true,
    "declarationDir": "dist"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/type.d.tsd.tssrc/type.d.tsype.d.ts", "type.d.ts"],
  "exclude": ["node_modules"]
}
